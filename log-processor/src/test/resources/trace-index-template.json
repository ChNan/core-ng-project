{
  "template": "trace-*",
  "order": 1,
  "settings": {
    "number_of_shards": 1
  },
  "mappings": {
    "trace": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "date": {
          "type": "date"
        },
        "id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "app": {
          "type": "string",
          "index": "not_analyzed"
        },
        "result": {
          "type": "string",
          "index": "not_analyzed"
        },
        "action": {
          "type": "string",
          "index": "not_analyzed"
        },
        "error_code": {
          "type": "string",
          "index": "not_analyzed"
        },
        "content": {
          "type": "string",
          "index": "no"
        }
      }
    }
  }
}